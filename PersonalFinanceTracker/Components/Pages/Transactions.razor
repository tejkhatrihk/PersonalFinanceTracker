@page "/transactions"
@using System.Globalization

<h3> My Transactions</h3>

@if (transactions == null)
{
    <p>Loading...</p>
}
else if (transactions.Count == 0)
{
    <p>No transactions found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Description</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in transactions)
            {
                <tr>
                    <td>@transaction.Date?.ToString("dd-MMM-yyyy")</td>
                    <td>@transaction.Amount.ToString("C", CultureInfo.GetCultureInfo("en-CA"))</td>
                    <td>@transaction.Description</td>
                    <td>@transaction.Category?.Name</td>
                </tr>
            }
            <tr>
                <td class="fw-bold">Total</td>
                <td colspan="3" class="align-content-lg-start">@transactions.Sum(a => a.Amount).ToString("C", CultureInfo.GetCultureInfo("en-CA"))</td>
            </tr>
        </tbody>
    </table>
}


